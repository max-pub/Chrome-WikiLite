{
  "manifest_version": 2,
  "name": "WikiLite",
  "description": "removes the clutter from Wikipedia",
  "version": "1.0",
  "author": "www.max.pub",
  "icons": { "128": "icon.128.png", "256": "icon.256.png" },  
  "content_scripts": [
    {
      "matches": ["file:///*","https://*.wikipedia.org/wiki/*"],
      // "matches": ["https://*.wikipedia.org/wiki/*"],
      "css": ["style.css"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [
       "flags/*.png"
     ]
}